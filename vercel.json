{
    "version": 2,
    "builds": [
        {
            "src": "index.js",
            "use": "@now/node-server"
        },
        {
            "src": "public/validate.js",
            "dest": "/",
            "use": "@now/node",
            "config": {
                "maxLambdaSize": "50mb"
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/"
        },
        {
            "src": "/",
            "dest": "/index.js",
            "methods": [
                "GET"
            ]
        },
        {
            "src": "/cotacao",
            "dest": "/index.js",
            "methods": [
                "GET"
            ]
        }
    ]
}