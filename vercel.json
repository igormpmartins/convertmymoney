{
    "version": 2,
    "builds": [
        {
            "src": "index.js",
            "use": "@now/node-server",
            "config": {
                "includeFiles": ["public/js/**", "js/**"]
              }
        },
        {
            "src": "home.ejs",
            "use": "@now/node-server",
            "config": {
                "includeFiles": ["public/js/**", "js/**"]
              }
        },

    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/"
        },
        {
            "src": "/",
            "dest": "/index.js",
            "methods": [
                "GET"
            ]
        },
        {
            "src": "/cotacao",
            "dest": "/index.js",
            "methods": [
                "GET"
            ]
        }
    ]
}