<%- include('header') %>

<form class="form-inline" method="GET" action="/cotacao" id="formConvert">

    <div class="container text-center w-50">

        <div class="row min-vw-75 mw-75">
            <div class="input-group mb-3"> 
                <div class="input-group-prepend">
                    <span class="input-group-text" >R$</span>
                </div>
                <input type="text" class="form-control" name="cotacao" id="cotacao" aria-label="Quantidade" value="<%=cotacao %>" placeholder="Cotação">
            </div>       
        </div>

        <div class="row min-vw-75 mw-75">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">$</span>
                </div>
                <input type="text" class="form-control" id="qtde" name="qtde" aria-label="Quantidade" placeholder="Quantidade de Dólares">
            </div>        
        </div>

        <div class="row text-center min-vw-75 mw-75">
                <a>
                    <button class="btn btn-outline-secondary" id="meuBtn">Converter!</button>
                </a>
        </div>

        <br>

    </div>
</form>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>

<script src="/validate.js"></script>
<script>
    $(()=> {
        
        $('#formConvert').validate()

    })
</script>  


</body>
</html>

